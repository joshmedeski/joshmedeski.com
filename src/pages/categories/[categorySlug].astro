---
import Layout from "../../components/Layout.astro";
import PostCard from "../../components/post/PostCard.astro";
import { categories, Category } from "../../models/Category.astro";
import clsx from "clsx";
import { getCollection } from "astro:content";

const { categorySlug } = Astro.params;

const categoryPosts = await getCollection(
  "posts",
  ({ data: { draft, categorySlug: postCategorySlug } }) =>
    !draft && postCategorySlug === categorySlug
);

const posts = categoryPosts.sort(
  ({ data: a }, { data: b }) => b.pubDate.getTime() - a.pubDate.getTime()
);

const category = categories.find(
  ({ slug }) => slug === categorySlug
) as Category;

export function getStaticPaths() {
  return categories.map(({ slug: categorySlug }) => ({
    params: { categorySlug },
  }));
}
---

<Layout
  title={category.title}
  description={category.desc}
  themeColor={category.style?.themeColor}
>
  <header
    class={clsx("text-center flex-grow pb-12", category.style?.container)}
  >
    <category.icon class="mx-auto mt-12 w-32" />
    <h1 class="mb-2 mt-10 text-2xl font-extrabold md:text-4xl">
      {category.title}
    </h1>
    <p>{category.desc}</p>
  </header>

  <section class={clsx("px-4 py-12")}>
    <div class="mx-auto max-w-screen-2xl">
      <section
        class="grid gap-4 sm:grid-cols-2 sm:gap-8 md:grid-cols-3 lg:grid-cols-4"
      >
        {posts.map((post) => <PostCard post={post} />)}
      </section>
    </div>
  </section>
</Layout>
