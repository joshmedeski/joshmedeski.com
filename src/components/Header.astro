---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../config";
---

<header class="flex align-center justify-between px-4 py-2 place-items-start">
  <h2 class="font-bold text-lg m-0">
    <a href="/">{SITE_TITLE}</a>
  </h2>
  <nav class="flex space-x-4">
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/posts">Posts</HeaderLink>
    <HeaderLink href="/about">About</HeaderLink>
    <HeaderLink href="https://twitter.com/joshmedeski" target="_blank"
      >Twitter</HeaderLink
    >
    <HeaderLink href="https://github.com/joshmedeski" target="_blank"
      >GitHub</HeaderLink
    >
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
</style>
