---
import { SITE_TITLE } from "../config";
import { categories } from "../models/Category.astro";
import Category from "./Category.astro";
import HeaderLink from "./HeaderLink.astro";
import PdeCta from "./cta/PdeCta";
import GitHubIcon from "./icons/GitHubIcon.astro";
import TwitterIcon from "./icons/TwitterIcon.astro";
import YouTubeIcon from "./icons/YouTubeIcon.astro";

const today = new Date();
---

<PdeCta />

<footer class="bg-white" aria-labelledby="footer-heading">
  <h2 class="sr-only">Footer</h2>
  <div class="mx-auto max-w-screen-xl py-12 px-4 sm:px-6 lg:py-16 lg:px-8">
    <div class="lg:grid lg:grid-cols-5 gap-4 lg:gap-6">
      <div class="space-y-6 lg:col-span-2">
        <div>
          <a href="/" class="flex items-center">
            <span class="text-2xl font-bold">{SITE_TITLE}</span>
          </a>
          <p class="text-base text-gray-500">
            Making the world a better place through teaching<br class="hidden sm:block" /> terminal-based
            workflows and productivity tips.
          </p>
        </div>
        <div>
          <h3 class="mb-1 font-bold">Follow me online</h3>
          <div class="flex items-center space-x-6">
            <HeaderLink
              href="https://www.youtube.com/joshmedeski"
              target="_blank"
              ><YouTubeIcon class="w-12" />
            </HeaderLink>
            <HeaderLink href="https://twitter.com/joshmedeski" target="_blank">
              <TwitterIcon class="w-12" />
            </HeaderLink>
            <HeaderLink href="https://github.com/joshmedeski" target="_blank"
              ><GitHubIcon class="w-12" />
            </HeaderLink>
          </div>
        </div>
      </div>

      <div class="mt-12 md:mt-0 lg:col-span-3">
        <section class="grid gap-4 lg:grid-cols-2 xl:grid-cols-3">
          {
            categories.map((cat) => (
              <Category {...cat}>
                <cat.icon />
              </Category>
            ))
          }
        </section>
      </div>
    </div>
  </div>
  <div class="mt-10 mb-12 border-t border-gray-200 pt-8 text-center mx-auto max-w-screen-xl">
    <p class="text-base text-gray-400 xl:text-center">
      &copy; {today.getFullYear()}
      {SITE_TITLE}. All rights reserved.
    </p>
  </div>
</footer>
