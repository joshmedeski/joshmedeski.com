---
import { SITE_TITLE } from "../config";
import Category from "./Category.astro";
import HeaderLink from "./HeaderLink.astro";
import PdeCta from "./cta/PdeCta";
import GitHubIcon from "./icons/GitHubIcon.astro";
import TwitterIcon from "./icons/TwitterIcon.astro";
import YouTubeIcon from "./icons/YouTubeIcon.astro";
import { getCollection } from "astro:content";

const today = new Date();
interface Props {
  hideCta?: boolean;
}
const { hideCta } = Astro.props;
const categories = await getCollection("categories");
---

{hideCta ? null : <PdeCta />}

<footer class="bg-white" aria-labelledby="footer-heading" id="menu">
  <h2 class="sr-only">Footer</h2>
  <div class="mx-auto max-w-screen-xl px-4 py-12 sm:px-6 lg:px-8 lg:py-16">
    <div class="gap-4 lg:grid lg:grid-cols-5 lg:gap-6">
      <div class="space-y-6 lg:col-span-2">
        <div>
          <a href="/" class="flex items-center">
            <span class="text-2xl font-bold">{SITE_TITLE}</span>
          </a>
          <p class="text-base text-gray-500">
            Empowering developers and creatives to build and grow with
            intention, by sharing insights and tools.
          </p>
        </div>

        <nav class="mb-8 flex items-center space-x-8 sm:hidden">
          <HeaderLink href="/">Home</HeaderLink>
          <HeaderLink href="/posts">Posts</HeaderLink>
          <HeaderLink href="/about">About</HeaderLink>
          <a
            href="/personal-development-environment"
            class="inline-block rounded-lg bg-gradient-to-l from-indigo-500 to-purple-600 px-4 py-2 text-sm font-bold tracking-wider text-white transition-all duration-300 ease-in-out hover:from-indigo-700 hover:to-purple-800"
            >Free Guide</a
          >
        </nav>

        <div>
          <h3 class="mb-1 font-bold">Follow me online</h3>
          <div class="flex items-center space-x-6">
            <HeaderLink
              href="https://www.youtube.com/joshmedeski"
              target="_blank"
            >
              <YouTubeIcon class="w-12" />
            </HeaderLink>
            <HeaderLink href="https://twitter.com/joshmedeski" target="_blank">
              <TwitterIcon class="w-12" />
            </HeaderLink>
            <HeaderLink href="https://github.com/joshmedeski" target="_blank">
              <GitHubIcon class="w-12" />
            </HeaderLink>
          </div>
        </div>
      </div>

      <div class="mt-12 md:mt-0 lg:col-span-3">
        <section class="grid gap-4 lg:grid-cols-2 xl:grid-cols-3">
          {categories.map((category) => <Category category={category} />)}
        </section>
      </div>
    </div>
  </div>
  <div
    class="mx-auto mb-12 mt-10 max-w-screen-xl border-t border-gray-200 pt-8 text-center"
  >
    <p class="text-base text-gray-400 xl:text-center">
      &copy; {today.getFullYear()}
      {SITE_TITLE}. All rights reserved.
    </p>
  </div>
</footer>
