---
import type { Category } from "../model/category.astro";
import clsx from "clsx";

export interface Props extends Category {}
const props = Astro.props;
---

<a
  href={`/categories/${props.slug}`}
  class={clsx(
    "bg-white shadow-sm rounded-lg p-3 flex items-center",
    props.style?.container
  )}
>
  <div class="mr-3 w-8">
    <slot />
  </div>
  <div>
    <h3
      class={clsx(
        "font-extrabold leading-none mb-1 text-lg tracking-wide",
        props.style?.title
      )}
    >
      {props.title}
    </h3>
    <p
      class={clsx(
        "text-sm font-medium leading-none tracking-wide",
        props.style?.desc
      )}
    >
      {props.desc}
    </p>
  </div>
</a>
