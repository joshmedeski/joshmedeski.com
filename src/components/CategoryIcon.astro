---
import type { CollectionEntry } from "astro:content";
import {
  ConversationsIcon,
  DevelopmentIcon,
  DotfilesIcon,
  PersonalDevelopmentIcon,
  ProductivityIcon,
  UsesIcon,
} from "../components/icons/index.astro";

interface Props {
  id: CollectionEntry<"categories">["id"];
  class?: string;
}

const { id, class: className } = Astro.props;
---

{id === "conversations" && <ConversationsIcon class={className} />}
{id === "development" && <DevelopmentIcon class={className} />}
{id === "dotfiles" && <DotfilesIcon class={className} />}
{
  id === "personal-development" && (
    <PersonalDevelopmentIcon class={className} />
  )
}
{id === "productivity" && <ProductivityIcon class={className} />}
{id === "tech" && <UsesIcon class={className} />}
