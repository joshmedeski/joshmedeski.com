---
import Layout from './Layout.astro'
import clsx from 'clsx'

const {
  content: { title, titleClasses, description, hideCta, image },
} = Astro.props
---

<Layout title={title} description={description} hideCta={hideCta} image={image}>
  <main class="mb-20 mt-10 bg-white">
    <article
      class="prose mx-auto max-w-screen-md bg-white px-4 prose-a:text-blue-600 hover:prose-a:text-blue-500"
    >
      <h1
        class={clsx([
          "mb-2 text-center text-2xl font-extrabold md:text-4xl",
          titleClasses,
        ])}
      >
        {title}
      </h1>
      <slot />
    </article>
  </main>
</Layout>
