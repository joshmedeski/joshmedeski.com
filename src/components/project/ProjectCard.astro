---
import type { CollectionEntry } from 'astro:content'
import { Image } from 'astro:assets'

interface Props {
  project: CollectionEntry<'projects'>
}

const { project } = Astro.props
const url = `https://github.com/${project.data.repo}`
---

<a href={url} target="_blank" rel="noopener noreferrer" class="bg-neutral-800 p-4 rounded-lg shadow-lg">
  <Image
    src={project.data.heroImage}
    alt={project.data.title}
    width="1200"
    height="675"
    class="mb-2 w-full rounded-lg bg-black shadow-md md:mb-4"
    transition:name={`project-${project.id}-thumb`}
  />
  <h3
    class="text-2xl font-bold"
    transition:name={`project-${project.id}-title`}
  >
    {project.data.title}
  </h3>
  <p>{project.data.description}</p>
</a>
