---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface BlogPostFrontmatter {
  title: string;
  description: string;
  pubDate: string;
  updatedDate?: string;
  youtubeUrl?: string;
  heroImage?: string;
}

export interface Props {
  content: BlogPostFrontmatter;
}

const {
  content: { title, description, pubDate, updatedDate, heroImage, youtubeUrl },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main>
      <div class="mx-auto max-w-screen-md mb-6">
        {
          youtubeUrl && (
            <div class="shadow-lg mb-4">
              <iframe
                width="100%"
                height="100%"
                class="aspect-video w-full"
                src="https://www.youtube.com/embed/BLp61-Lq0kQ"
                title="YouTube video player"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              />
            </div>
          )
        }
        {
          heroImage && !youtubeUrl && (
            <img class="w-full" src={heroImage} alt={`${title} hero`} />
          )
        }
      </div>

      <div class="mx-auto max-w-screen-md px-4 mb-6">
        <h1 class="font-extrabold text-4xl">{title}</h1>
        <div class="text-sm text-gray-600">
          {
            pubDate && (
              <time>
                {new Date(pubDate).toLocaleDateString("en-US", {
                  dateStyle: "long",
                })}
              </time>
            )
          }
          {
            updatedDate && (
              <div>
                Last updated on <time>{updatedDate}</time>
              </div>
            )
          }
        </div>
      </div>

      <article
        class="prose mx-auto prose-a:text-blue-600 hover:prose-a:text-blue-500"
      >
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
